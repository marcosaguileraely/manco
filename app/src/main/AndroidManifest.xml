<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.manco.app" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EquiposActivity"
            android:label="@string/title_activity_equipos"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".EquiposActivity_Crear"
            android:label="@string/title_activity_equipos_activity__crear"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".TermogramaActivity"
            android:label="@string/title_activity_termograma"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".TermogramaActivity_Crear"
            android:label="@string/title_activity_termograma_activity__crear"
            android:screenOrientation="portrait" >
        </activity>

        <provider
            android:name=".Utils.MyFileContentProvider"
            android:authorities="com.manco.app"
            android:enabled="true"
            android:exported="true" />

    </application>

    <uses-permission android:name="android.permission.CAMERA" />

</manifest>
